<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhonatan.leo.Main2Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:text="CAT"
        android:textColor="#FF0000"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        android:layout_marginRight="235dp"
        android:layout_marginEnd="235dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:text="MANIZALES"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp" />

    <ScrollView
        android:layout_width="257dp"
        android:layout_height="66dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.067">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="312dp"
                android:layout_height="28dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="310dp"
                android:layout_height="31dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="308dp"
                android:layout_height="32dp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="315dp"
                android:layout_height="28dp" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="312dp"
                android:layout_height="30dp" />

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="314dp"
                android:layout_height="31dp" />


        </LinearLayout>


    </ScrollView>

    <RadioGroup
        android:id="@+id/grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.626"
        android:layout_marginRight="114dp">

        <RadioButton
            android:id="@+id/moodle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plataforma Moodle " />

        <RadioButton
            android:id="@+id/qdiez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plataforma Q10" />

        <RadioButton
            android:id="@+id/correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Correo Institucional" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
